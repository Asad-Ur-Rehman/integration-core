pipeline {
  agent {
    label "automation"
  }
  triggers {
    pollSCM('*/5 * * * *')
  }

  stages {
    stage ("test") {
      steps {
        sh './ci/unit.sh'
      }
      post {
        failure {
          slackSend channel: '10pearls', color: 'danger', message: "integration-provider-factory unit tests failed on master (<${env.BUILD_URL}|Open>)"
        }
      }
    }

    stage ("build/publish") {
      steps {
        sshagent(['63730a8e-8555-4018-8a30-6163e5d6c8e8']) {
          sh '''
            rm -rf /target/*/*.jar
            if [[ $BRANCH_NAME == 'master' ]]; then
              sbt "release with-defaults" -Dfinal=true
            else
              sbt "release with-defaults"
            fi
          '''
        }
      }
      post {
        success {
	  archiveArtifacts 'target/scala*/*.jar'
	}
        failure {
          slackSend channel: '10pearls', color: 'danger', message: "integration-provider-factory build/publish failed (<${env.BUILD_URL}|Open>)"
        }
      }
    }
  }
  post {
    failure {
      slackSend channel: 'notifications', color: 'danger', message: 'integration-provider-factory build/publish failed'
    }

    success {
      slackSend channel: 'notifications', color: 'good', message: 'integration-provider-factory successfully built and published'
    }
  }
}
